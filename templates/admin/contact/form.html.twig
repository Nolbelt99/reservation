{% extends 'admin/layout/form.html.twig' %}
{% block title %}Kapcsoalt{% endblock %}
{% block form_footer %}
    <a class="btn btn-light btn-sm" href="{{ path('admin_dashboard') }}">Vissza</a>
{% endblock %}
{% block form_fields %}
    <div class="form-group row">
        {{ form_label(form.name, null, {'label_attr': {'class': 'col-md-3 col-form-label'}}) }}
        <div class="col-md-6">
           {{ form_widget(form.name) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.email, null, {'label_attr': {'class': 'col-md-3 col-form-label'}}) }}
        <div class="col-md-6">
            {{ form_widget(form.email) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.zip, null, {'label_attr': {'class': 'col-md-3 col-form-label'}}) }}
        <div class="col-md-6">
            {{ form_widget(form.zip) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.city, null, {'label_attr': {'class': 'col-md-3 col-form-label'}}) }}
        <div class="col-md-6">
            {{ form_widget(form.city) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.streetAndOther, null, {'label_attr': {'class': 'col-md-3 col-form-label'}}) }}
        <div class="col-md-6">
            {{ form_widget(form.streetAndOther) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.phone, null, {'label_attr': {'class': 'col-md-3 col-form-label'}}) }}
        <div class="col-md-6">
            {{ form_widget(form.phone) }}
        </div>
    </div>
{% endblock %}